<aura:component implements="force:hasRecordId,force:lightningQuickActionWithoutHeader" access="global">
  <aura:html tag="style">
    .slds-modal {
    visibility: hidden;
    display: none;
    }
    .slds-backdrop{
    display: none;
    }
  </aura:html>

  <lightning:navigation aura:id="navService" />
  <aura:handler name="init" action="{!c.doInit}" value="{!this}" />

  <!--  Deprecated as we need its related records  as well
    <aura:attribute name="objAppt" type="Object" />
    <aura:attribute name="recordError" type="String" />
    <aura:attribute name="fields" type="String[]" default="['Name','Loan_ID__c']" />
    force:recordData aura:id="recordLoader" fields="{!v.fields}" recordId="{!v.recordId}" targetFields="{!v.objAppt}"
        targetError="{!v.recordError}" recordUpdated="{!c.handleRecordUpdated}" /-->

</aura:component>